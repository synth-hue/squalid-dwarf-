---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 class="logo-type"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About Me</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://linkedin.com/li/rileyj-s" target="_blank">
				<span class="sr-only">Follow Riley on LinkedIn</span>
				<svg fill="#000000" height="16" width="16" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" 
				viewBox="0 0 310 310" xml:space="preserve">
